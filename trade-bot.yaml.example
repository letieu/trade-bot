# Trading Bot Configuration File
# Copy this file to trade-bot.yaml and modify the settings as needed

telegram:
  botToken: ""  # Get this from @BotFather on Telegram
  chatId: ""     # Get this from @userinfobot on Telegram

bybit:
  baseUrl: "https://api.bybit.com"
  timeout: "10s"
  rateLimit: 20
  headers:
    Content-Type: "application/json"

bot:
  scanInterval: "1m"
  batchSize: 20
  maxConcurrency: 5
  frontend: "telegram" # options: "telegram", "console"
  enabledIntervals:
    - "1h"
    - "4h"
    - "1d"

backtest:
  startTime: "2025-01-02T00:00:00Z"  # 1 month ago from current date
  endTime: "2025-02-02T00:00:00Z"      # Current date
  dataPath: "./data"
  saveResults: true
  resultsPath: "./results"